noproxyarp 
usehostname 
noipdefault 
modem 
noauth 
connect "/usr/sbin/chat -vs -f /etc/chatscripts/gprs.chat" 
hide-password 
defaultroute
usepeerdns

call ppp_provider_options

/dev/com1
115200


